<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!--  android:text="admin"
     android:text="13681571513"
      android:text="棕榈泉公寓"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="姓名:" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:maxLength="10" />
    </LinearLayout>

    <include layout="@layout/divider_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="电话：" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="phone"

            android:maxLength="11" />
    </LinearLayout>

    <include layout="@layout/divider_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="地址：" />

        <EditText
            android:id="@+id/editAddr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:maxLength="25"
           />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_green_selector"
        android:text="保存收货地址"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_orange_selector"
        android:text="删除收货地址"
        android:textColor="@color/white"
        android:visibility="invisible" />

</LinearLayout><!-- From: file:/D:/studiospace/LifeService/app/src/main/res/layout/activity_addr_edit.xml -->